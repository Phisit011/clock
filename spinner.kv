<UI>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Spinner:
                id: spin_lang
                text: "plese select"
                values: ("python","php","html","sql")
                size_hint: (0.4,0.2)
                pos_hint: {'x': 0.2 , 'y': 0.85 }

            Label:
                id: lbl_output
                text: 'you selected :{}'.format(spin_lang.text)

        BoxLayout:
            col:3
            Label:
                text: 'Add Language'
            TextInput:
                id: txt_input
            Button:
                id: "btn_additem"
                text: 'Add Item'
                on_press: root.add_item()